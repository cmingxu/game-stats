= form_for(@payment) do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2
        = pluralize(@payment.errors.count, "error")
        prohibited this payment from being saved:
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :amount
    %br/
    = f.number_field :amount
  .field
    = f.label :player_id
    %br/
    = f.number_field :player_id
  .field
    = f.label :app_id
    %br/
    = f.number_field :app_id
  .field
    = f.label :locale
    %br/
    = f.text_field :locale
  .field
    = f.label :country
    %br/
    = f.text_field :country
  .actions
    = f.submit

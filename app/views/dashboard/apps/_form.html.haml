= form_for(@app) do |f|
  - if @app.errors.any?
    #error_explanation
      %h2
        = pluralize(@app.errors.count, "error")
        prohibited this app from being saved:
      %ul
        - @app.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :client_id
    %br/
    = f.number_field :client_id
  .field
    = f.label :key
    %br/
    = f.text_field :key
  .field
    = f.label :secret
    %br/
    = f.text_field :secret
  .actions
    = f.submit

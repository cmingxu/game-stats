= form_for(@account) do |f|
  - if @account.errors.any?
    #error_explanation
      %h2
        = pluralize(@account.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :encrypted_password
    %br/
    = f.text_field :encrypted_password
  .field
    = f.label :salt
    %br/
    = f.text_field :salt
  .field
    = f.label :role
    %br/
    = f.text_field :role
  .actions
    = f.submit
